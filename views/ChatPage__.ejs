                                ]
                            }
                        },
                        "q6": {
                            wait: 800,
                            type: "text",
                            sentence: [
                                {
                                    mex: '음! 잠깐만...\n' +
                                    '맞아요 저 해변에 있었어요 모래가 평평하게 가득하고\n' +
                                    '가끔씩 누군가 멋지게 만들어놓은 모래성이 있었어요.'
                                }
                            ],
                            r: {
                                wait: 800,
                                type: "button",
                                el: [
                                    {type: "link", value: "http://210.89.190.28:44444/devcamp", label:"떠나보아요~!"},
                                ]
                            }
                        }
                    };

                    $freud.init('#freud', nodes);
              });

