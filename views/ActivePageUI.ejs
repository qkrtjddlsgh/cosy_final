    <script>
        window.onload = function(){
          chback();
        };

        function chback(){

          var user_point = document.getElementById("user_point").value;
          var user_level, level_name;

          if(user_point>=0 && user_point<1000){
            user_level = 0;
          }
          else if(user_point>=1000 && user_point<2000){
            user_level = 1;
            level_name = "모래성이";
          }
          else if(user_point>=2000 && user_point<3000){
            user_level = 2;
            level_name = "바이킹이";
          }
          else if(user_point>=3000 && user_point<4000){
            user_level = 3;
            level_name = "풍선차가";
          }
          else if(user_point>=4000 && user_point<5000){
            user_level = 4;
            level_name = "폭포가";
          }
          else if(user_point>=5000 && user_point<6000){
            user_level = 5;
            level_name = "달이";
          }
          else if(user_point>=6000 && user_point<7000){
            user_level = 6;
            level_name = "관람차가";
          }
          else if(user_point>=7000 && user_point<8000){
            user_level = 7;
            level_name = "별똥별이";
          }
          else if(user_point>=8000 && user_point<9000){
            user_level = 8;
            level_name = "롤러코스터가";
          }
          else if(user_point>=9000 && user_point<10000){
            user_level = 9;
            level_name = "게가";
          }
          else if(user_point>=10000 && user_point<11000){
            user_level = 10;
            level_name = "무지개가";
          }
          else if(user_point>=11000 && user_point<12000){
            user_level = 11;
            level_name = "열대우림이";
          }
          else if(user_point>=12000 && user_point<13000){
            user_level = 12;
            level_name = "열기구가";
          }
          else if(user_point>=13000 && user_point<14000){
            user_level = 13;
            level_name = "원숭이가";
          }
          else if(user_point>=14000 && user_point<15000){
            user_level = 14;
            level_name = "조개가";
          }
          else if(user_point>=15000 && user_point<16000){
            user_level = 15;
          }
          else{
            user_level = 0;
          }

          var url_list = "url('http://210.89.190.28:44444/backg/" + "level" + user_level + ".png";
          document.getElementById('td1').style.backgroundImage = url_list;
          swal( level_name + " 기억났어요! 고마워요!");
        }

        function reset(){

          swal("정말로 포인트를 리셋하시겠습니까?", {
            buttons: {
              cancel: "아니오",
              catch: {
                text: "예",
                value: "yes",
              }
            },
          })
          .then((value) => {
            switch (value) {

              case "yes":
                swal("포인트가 리셋되었습니다", "새롭게 시작해 볼까요?", { buttons: false, timer: 3000});
                setTimeout(function() {window.location.href = "http://210.89.190.28:44444/reset"}, 3000);
              break;

              default:
            }
          });


        }

        function logout(){

            swal("로그아웃 하시겠습니까?", {
              buttons: {
                cancel: "아니오",
                catch: {
                  text: "예",
                  value: "yes",
                }
              },
            })
            .then((value) => {
              switch (value) {

                case "yes":
                  swal("로그아웃 되었습니다", "내일 또 오세요!", { buttons: false, timer: 3000});
                  setTimeout(function() {window.location.href = "http://210.89.190.28:44444/logout"}, 3000);
                break;

                default:
              }
            });
        }
        function Ending(){
            location.href = "http://210.89.190.28:44444/Ending";
        }



    </script>
